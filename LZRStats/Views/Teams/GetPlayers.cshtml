                @Html.DisplayNameFor(model => model.FG3Attempted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FG3Made)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FTAttempted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FTMade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinutesPlayed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GamesPlayed)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Team.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
