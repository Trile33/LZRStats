                @Html.DisplayNameFor(model => model.OffensiveRebounds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefensiveRebounds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalRebounds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assists)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Steals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blocks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FG2Attempted)
            </th>
