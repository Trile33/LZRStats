                    @Html.DisplayFor(modelItem => item.OffensiveRebounds)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefensiveRebounds)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalRebounds)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Assists)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Steals)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Blocks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FG2Attempted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FG2Made)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FG3Attempted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FG3Made)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FTAttempted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FTMade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinutesPlayed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GamesPlayed)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>